<?xml version="1.0" encoding="UTF-8"?>
<project default="toHTML" name="simplepdl.toHTML">
    <property name="ECLIPSE_HOME" value="../../../../../../../eclipse/modeling-2022-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../../../../../../../eclipse-workspace"/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="simplepdl.toHTML.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/simplepdl.toHTML/bin"/>
    </path>

    <path id="simplepdl.toHTML.classpath">
        <path refid="simplepdl.toHTML.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="simplepdl.toHTML.libraryclasspath.alljars">
        <pathelement location="../simplepdl.toHTML/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="simplepdl.toHTML.classpath.alljars">
        <path refid="simplepdl.toHTML.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="toHTML">
        <java classname="simplepdl.toHTML.main.ToHTML" classpathref="simplepdl.toHTML.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="toHTML.alljars">
        <java classname="simplepdl.toHTML.main.ToHTML" classpathref="simplepdl.toHTML.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
